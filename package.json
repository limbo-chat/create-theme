{
	"name": "create-limbo-theme",
	"type": "module",
	"version": "0.1.0",
	"description": "The best way to create a limbo theme",
	"license": "MIT",
	"author": {
		"name": "Wes Lowe",
		"email": "wesley.jlowe10@gmail.com"
	},
	"keywords": [
		"limbo"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/limbo-llm/create-limbo"
	},
	"files": [
		"dist",
		"package.json",
		"template",
		"README.md"
	],
	"bin": "./dist/cli.js",
	"scripts": {
		"build": "tsup",
		"dev": "NODE_ENV=development tsx ./src/cli.ts",
		"format": "prettier --write .",
		"publish-package": "pnpm build && pnpm publish",
		"clean": "pnpm clean:dist && pnpm clean:dest && pnpm clean:modules",
		"clean:dist": "rm -rf dist",
		"clean:dest": "rm -rf dest",
		"clean:modules": "rm -rf node_modules",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"chalk": "^5.4.1",
		"poopgen": "^1.0.1"
	},
	"devDependencies": {
		"@types/node": "^22.5.5",
		"prettier": "^3.3.2",
		"tsup": "^8.1.0",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3"
	}
}
